            style="@style/keypadText" />
        <Button
            android:layout_marginRight="@dimen/keypad_margin"
            android:id="@+id/keyL"
            android:text="@string/letter_L"
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="@dimen/keypad_key_height"
            style="@style/keypadText" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/keypadbottomrow"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_marginRight="@dimen/keypad_margin"
            android:id="@+id/keyMenu"
            android:text="@string/key_menu"
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="@dimen/keypad_key_height"
            style="@style/keypadDel" />
        <Button
            android:id="@+id/keyZ"
            android:text="@string/letter_Z"
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="@dimen/keypad_key_height"
