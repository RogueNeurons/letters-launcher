        <Button
            android:id="@+id/keyX"
            android:text="@string/letter_X"
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="@dimen/keypad_key_height"
            style="@style/keypadText" />
        <Button
            android:id="@+id/keyC"
            android:text="@string/letter_C"
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="@dimen/keypad_key_height"
            style="@style/keypadText" />
        <Button
            android:id="@+id/keyV"
