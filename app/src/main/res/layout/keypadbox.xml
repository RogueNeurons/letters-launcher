            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="@dimen/keypad_key_height"
            style="@style/keypadDel" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/keypadnumrow"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/key1"
            android:text="@string/letter_1"
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="@dimen/keypad_key_height"
            style="@style/keypadText" />
        <Button
            android:id="@+id/key2"
            android:text="@string/letter_2"
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="@dimen/keypad_key_height"
            style="@style/keypadText" />
        <Button
            android:id="@+id/key3"
            android:text="@string/letter_3"
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="@dimen/keypad_key_height"
            style="@style/keypadText" />
        <Button
            android:id="@+id/key4"
            android:text="@string/letter_4"
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="@dimen/keypad_key_height"
            style="@style/keypadText" />
        <Button
