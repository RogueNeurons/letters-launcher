<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/keypad"
    android:background="#ff4c2cc0"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/keypadtoprow"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/keyQ"
            android:text="@string/letter_Q"
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="@dimen/keypad_key_height"
            style="@style/keypadText" />
        <Button
            android:id="@+id/keyW"
            android:text="@string/letter_W"
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="@dimen/keypad_key_height"
            style="@style/keypadText" />
        <Button
            android:id="@+id/keyE"
            android:text="@string/letter_E"
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="@dimen/keypad_key_height"
            style="@style/keypadText" />
        <Button
            android:id="@+id/keyR"
            android:text="@string/letter_R"
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="@dimen/keypad_key_height"
            style="@style/keypadText" />
        <Button
            android:id="@+id/keyT"
            android:text="@string/letter_T"
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="@dimen/keypad_key_height"
            style="@style/keypadText" />
        <Button
            android:id="@+id/keyY"
            android:text="@string/letter_Y"
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="@dimen/keypad_key_height"
            style="@style/keypadText" />
        <Button
            android:id="@+id/keyU"
            android:text="@string/letter_U"
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="@dimen/keypad_key_height"
            style="@style/keypadText" />
        <Button
            android:id="@+id/keyI"
            android:text="@string/letter_I"
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="@dimen/keypad_key_height"
            style="@style/keypadText" />
        <Button
            android:id="@+id/keyO"
            android:text="@string/letter_O"
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="@dimen/keypad_key_height"
            style="@style/keypadText" />
        <Button
            android:id="@+id/keyP"
            android:text="@string/letter_P"
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="@dimen/keypad_key_height"
            style="@style/keypadText" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/keypadmidrow"
        android:layout_gravity="center_horizontal">


        <Button
            android:layout_marginLeft="@dimen/keypad_margin"
            android:id="@+id/keyA"
            android:text="@string/letter_A"
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="@dimen/keypad_key_height"
            style="@style/keypadText" />
        <Button
            android:id="@+id/keyS"
            android:text="@string/letter_S"
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="@dimen/keypad_key_height"
            style="@style/keypadText" />
        <Button
            android:id="@+id/keyD"
            android:text="@string/letter_D"
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="@dimen/keypad_key_height"
            style="@style/keypadText" />
        <Button
            android:id="@+id/keyF"
            android:text="@string/letter_F"
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="@dimen/keypad_key_height"
            style="@style/keypadText" />
        <Button
            android:id="@+id/keyG"
            android:text="@string/letter_G"
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="@dimen/keypad_key_height"
            style="@style/keypadText" />
        <Button
            android:id="@+id/keyH"
            android:text="@string/letter_H"
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="@dimen/keypad_key_height"
            style="@style/keypadText" />
